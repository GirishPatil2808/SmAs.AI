{
  "background": {
  "service_worker": "background.js"
},
  "manifest_version": 3,
  "name": "SmAs.AI",
  "version": "0.1",
  "description": "A proactive AI assistant for any website.",
  "permissions": ["activeTab", "storage", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "widget.css",
        "widget.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
  
}
